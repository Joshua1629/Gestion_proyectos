{
  "name": "gestion-proyectos",
  "version": "1.0.0",
  "private": true,
  "description": "Aplicación de gestión de proyectos (Electron + Express + React)",
  "author": "",
  "main": "electron/main.js",
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.2",
    "sharp": "^0.34.3",
    "sqlite3": "5.1.7",
    "xlsx": "^0.18.5"
  },
  "overrides": {
    "sqlite3": {
      "node-addon-api": "4.3.0"
    }
  },
  "scripts": {
    "start:server": "cd server && npx nodemon app.js",
    "start:frontend": "cd frontend && npm run dev",
    "start:electron": "cross-env ELECTRON_DEV=true npx electron .",
    "dev": "concurrently \"npm run start:server\" \"npm run start:frontend\" \"npm run start:electron\"",
    "build:frontend": "cd frontend && npm run build",
    "postinstall": "cd frontend && npm install && cd .. && node scripts/patch-sqlite3-gyp.js && (electron-builder install-app-deps || (node scripts/patch-electron-gypi.js && electron-builder install-app-deps))",
    "pack": "npm run build:frontend && electron-builder --dir",
    "build:icon": "node scripts/create-icon.js",
    "build:icon:mac": "node scripts/create-icon-mac.js",
    "rebuild:native": "electron-builder install-app-deps",
    "rebuild:sqlite3:verbose": "cd node_modules/sqlite3 && npm run rebuild",
    "dist:win": "npm run build:icon && npm run build:frontend && cross-env NODE_ENV=production electron-builder --win",
    "dist:mac": "npm run build:frontend && cross-env NODE_ENV=production electron-builder --mac",
    "dist:mac:x64": "npm run build:frontend && cross-env NODE_ENV=production electron-builder --mac --x64",
    "dist": "npm run build:icon && npm run build:frontend && cross-env NODE_ENV=production electron-builder --win --mac"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "22.3.27",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.1.10",
    "png-to-ico": "^3.0.1"
  },
  "build": {
    "appId": "com.tuempresa.gestion-proyectos",
    "productName": "Gestion Proyectos",
    "npmRebuild": true,
    "nodeGypRebuild": false,
    "files": [
      "electron/**/*",
      "server/**/*",
      "frontend/dist/**/*",
      "db/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asarUnpack": [
      "frontend/dist/**/*",
      "frontend/public/**/*",
      "**/node_modules/sqlite3/**/*",
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*"
    ],
    "extraResources": [
      {
        "from": "server/",
        "to": "server/",
        "filter": [
          "**/*",
          "!node_modules/**"
        ]
      },
      {
        "from": "server/node_modules/",
        "to": "server/node_modules/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "db/",
        "to": "db/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "frontend/public/",
        "to": "frontend/public/",
        "filter": [
          "logo.png",
          "logoapp.png",
          "icon_256.png",
          "icon.ico",
          "icon.icns",
          "cfia_seal.png",
          "cfia.png"
        ]
      },
      {
        "from": "node_modules/",
        "to": "server/node_modules/",
        "filter": [
          "**/*",
          "!@types/**",
          "!@electron/**",
          "!@babel/**",
          "!electron/**",
          "!electron-builder/**",
          "!typescript/**",
          "!vite/**",
          "!react/**",
          "!react-dom/**",
          "!@vitejs/**",
          "!@swc/**",
          "!**/node_modules/typescript/**/*",
          "!**/node_modules/vite/**/*",
          "!**/node_modules/@types/**/*",
          "!**/node_modules/react*/**/*",
          "!**/node_modules/electron*/**/*"
        ]
      },
      {
        "from": "node_modules/sqlite3/",
        "to": "sqlite3/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "icon": "frontend/public/icon.ico",
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false,
      "icon": "frontend/public/icon.ico"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "frontend/public/logoapp.png",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
